# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="AlgoTrader"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/alogtrader
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Fyers API Configuration
FYERS_APP_ID=your_fyers_app_id
FYERS_SECRET_KEY=your_fyers_secret_key
FYERS_REDIRECT_URI=http://localhost:8000/auth/fyers/callback
FYERS_BASE_URL=https://api-t1.fyers.in/api/v3

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS Configuration (for production)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SSM_PREFIX=/alogtrader/

# Chartlink Webhook Configuration
CHARTLINK_WEBHOOK_SECRET=your_chartlink_webhook_secret
CHARTLINK_WEBHOOK_ENDPOINT=/webhooks/chartlink

# Risk Management
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=5000
MAX_DAILY_TRADES=50

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]
